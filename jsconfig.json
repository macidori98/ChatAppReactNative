{
  "compilerOptions": {
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-native",
    "target": "ES2016",
    "baseUrl": "src",
    "paths": {
      "~/*": ["src/*"],
      "components/*": ["components/*"],
      "navigation/*": ["navigation/*"],
      "screens/*": ["screens/*"],
      "theme/*": ["theme/*"]
    }
  },
  "exclude": ["node_modules"]
}
